{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Marc bib update event, caused by linked authority update, schema",
  "type": "object",
  "properties": {
    "jobId": {
      "description": "Quick marc job id, UUID",
      "$ref": "uuid.json"
    },
    "linkIds": {
      "description": "All bib-related link ids",
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "record": {
      "description": "Marc bib record",
      "type": "string"
    },
    "type": {
      "description": "Marc bib event type",
      "type": "string",
      "enum": [
        "UPDATE",
        "DELETE"
      ]
    },
    "tenant": {
      "description": "Tenant id",
      "type": "string"
    },
    "ts": {
      "description": "Timestamp",
      "type": "string"
    }
  }
}
